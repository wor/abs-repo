# Maintainer: Esa Määttä <wor@iki.fi>
pkgname=pyflakes3k-hg
pkgver=31
pkgrel=1
pkgdesc="Passive checker of Python programs (py3k port)"
arch=('any')
url="http://bitbucket.org/hsoft/pyflakes3k"
license=('MIT')
groups=()
depends=('python')
makedepends=('python-distribute' 'mercurial')
provides=()
conflicts=('pyflakes3k')
replaces=()
backup=()
options=()
install=
source=()
noextract=()
md5sums=() #generate with 'makepkg -g'

_hgroot="https://bitbucket.org/hsoft"
_hgrepo=pyflakes3k

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [[ -d "$_hgrepo" ]]; then
    cd "$_hgrepo"
    hg pull -u
    msg "The local files are updated."
  else
    msg "Cloning.."
    hg clone "$_hgroot" "$_hgrepo"
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting build..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  #
  # BUILD HERE
  #
  python setup.py build
}

package() {
  cd "$srcdir/$_hgrepo-build"
  python setup.py install --root="$pkgdir" --optimize=1
  mv $pkgdir/usr/bin/pyflakes $pkgdir/usr/bin/pyflakes3
}

# vim:set ts=2 sw=2 et:
