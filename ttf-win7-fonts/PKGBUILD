# Contributor: mutlu_inek <mutlu_inek@yahoo.de>

pkgname=ttf-win7-fonts
pkgver=1
pkgrel=1
pkgdesc="Microsoft 7 SP1 True Type Fonts"
url="http://www.microsoft.com/downloads/details.aspx?FamilyId=428D5727-43AB-4F24-90B7-A94784AF71A4&displaylang=en"
license=(custom)
arch=('any')
depends=('fontconfig' 'xorg-font-utils')
makedepends=()
conflicts=()
provides=()
replaces=()
install=$pkgname.install
source=("$pkgname.tar.xz")

build() {
  mkdir -p $pkgdir/usr/share/fonts/TTF
  install -m644 $startdir/src/win_7*/*.{ttf,ttc} $startdir/pkg/usr/share/fonts/TTF
  rm $pkgdir/usr/share/fonts/TTF/symbol.ttf # not very usefull font, also osx font package has this
}
sha1sums=('0373ac5746ec1599986186b3382a1829f79c25de')
